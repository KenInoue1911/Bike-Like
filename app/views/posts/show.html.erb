  <%= attachment_image_tag @post, :image %>
  <p>バイク名: <%= @post.post_bike %></p>
  <p>タイトル：<%= @post.title %></p>
  <p>説明：<%= @post.post_profile %></p>
  <p>ユーザーネーム：<%= @post.user.name %></p>
  <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>

  <p>コメント件数: <%= @post.post_comments.count %></p>
  <% @post.post_comments.each do |post_comment| %>
  <p>ユーザーネーム: <%= post_comment.user.name %></p>
  <p>コメント日時：<%= post_comment.created_at.strftime('%Y/%m/%d') %></p>
  <p>コメント内容 : <%= post_comment.comment %></p>

  <% if post_comment.user == current_user %>
  <%= link_to "コメントを削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
  <% end %>
  <% end %>

  <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
   <%= f.text_area :comment, row:"5", placeholder:"コメントを入力してください" %>
   <%= f.submit "送信する" %>
   <% end %>


  <% if @post.user == current_user %>
   <%= link_to "編集", edit_post_path(@post) %>
   <%= link_to "削除", post_path(@post), method: :delete %>
  <% end %>
