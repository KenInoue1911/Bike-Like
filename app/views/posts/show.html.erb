
  <%= attachment_image_tag @post, :image %>
  <p>バイク名: <%= @post.post_bike %></p>
  <p>タイトル：<%= @post.title %></p>
  <p>説明：<%= @post.post_profile %></p>
  <p>ユーザーネーム：
  <%= link_to user_path(@post.user) do %>
  <%= @post.user.name %></p>
  <% end %>
 
  <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
<div id="favorite_button_<%=@post.id%>">
 <%= render partial: 'favorites/favorite-btn', locals: {post: @post} %>
 </div>
 <p><%= render 'posts/tag_list', tag_list: @post.tag_list %></p>
  

  <p>コメント件数: <%= @post.post_comments.count %></p>


<div class="post_comment">
 <%= render partial: 'posts/comment', locals: { post: @post,post_comment: @post_comment } %>
</div>


<%= form_with model:[@post, @post_comment], remote: :true do |f| %>
<%= f.text_area :comment, id:"post_comment_area", row:"5", placeholder:"コメントを入力してください" %>
<%= f.submit "送信する" %>
<% end %>

  <% if @post.user == current_user %>
   <%= link_to "編集", edit_post_path(@post) %>
   <%= link_to "削除", post_path(@post), method: :delete %>
  <% end %>

