<h2>プロフィール編集</h2>
<%= form_with model:@user, local:true do |f| %>
   <% if @user.avater? %>
      <%= image_tag @user.avater.thumb.url %>
   <% else %>
      <%= image_tag "/assets/default.jpg", :size => '100x100' %>
   <% end %>
         <button type="button" class="btn btn-outline-secondary rounded-pill">
         <%= f.file_field :avater, accept: 'image/jpeg,image/gif,image/png' %>
      </button>
  <div class="field">
    <%= f.label :名前（必須） %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :年齢 %><br />
    <%= f.text_field :age, autofocus: true, autocomplete: "age" %>
  </div>

   <div class="field">
    <%= f.label :性別 %><br />
    <%= f.label :男性 %>
    <%= f.radio_button :gender, :男性 %>
    <%= f.label :女性 %>
    <%= f.radio_button :gender, :女性 %>
  </div>

   <div class="field">
    <%= f.label :バイク %><br />
    <%= f.text_field :bike, autofocus: true, autocomplete: "bike" %>
  </div>

  <div class="field">
    <%= f.label :自己紹介 %><br />
    <%= f.text_area :profile, autofocus: true, autocomplete: "profile" %>
  </div>
  <%= f.submit "保存" %>
<% end %>