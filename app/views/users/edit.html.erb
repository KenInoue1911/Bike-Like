<h1 class="show-user-title">
    PROFILE EDIT
</h1>
<!--ユーザー編集画面-->
<div class="user-edit-main">
     <div class="user-edit-card">
         <% if @user.avater? %>
             <%= image_tag @user.avater.thumb.url, class: "user-avater-useredit" %>
         <% else %>
             <%= image_tag "/assets/default.jpg", :size => '250x250' %>
         <% end %>
     </div>

    <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
    <% end %>
      </ul>
    </div>

<%= form_with model:@user, local:true do |f| %>
      <div class="field01">
         <%= f.file_field :avater, accept: 'image/jpeg,image/gif,image/png' %>
      </div>

      <div class="field01">
         <%= f.label :名前（必須） %><br />
         <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field01">
         <%= f.label :年齢 %><br />
         <%= f.text_field :age, autofocus: true, autocomplete: "age" %>
      </div>

      <div class="field01">
         <%= f.label :性別 %><br />
         <%= f.label :男性 %>
         <%= f.radio_button :gender, :男性 %>
         <%= f.label :女性 %>
         <%= f.radio_button :gender, :女性 %>
      </div>

      <div class="field01">
         <%= f.label :バイク %><br />
         <%= f.text_field :bike, autofocus: true, autocomplete: "bike" %>
      </div>

      <div class="field01">
         <%= f.label :自己紹介 %><br />
         <%= f.text_area :profile, autofocus: true, autocomplete: "profile", size: "48x6" %>
      </div>
      <!--ゲストユーザーは編集できないように設定-->
      <% if current_user.name == "ゲストユーザー" %>
         <h2>編集できません</h2>
      <% else %>
         <i class="fas fa-motorcycle"></i>
         <%= f.submit 'GO!!!', class: 'post-btn' %>
         <i class="fas fa-motorcycle"></i>
</div>
<% end %>
<% end %>