<!--いいね解除ボタン-->
<% if post.favorited_by?(current_user) %>
   <%= link_to post_favorites_path(post), method: :delete, remote: true do %><i class="fas fa-heart"></i>
     <%= post.favorites.count %>いいね
   <% end %>
   <!--いいねボタン-->
<% else %>
   <%= link_to post_favorites_path(post), method: :post, remote: true do %><i class="far fa-heart"></i>
     <%= post.favorites.count %>いいね
   <% end %>
<% end %>