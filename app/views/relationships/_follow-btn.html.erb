<% if current_user.following?(user) %>
<i class="fas fa-users-slash"></i>
  <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, remote: true, class: "user-follow-btn" %>
<% else %>
<i class="fas fa-user-friends"></i>
  <%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class: "user-follow-btn" %>
<% end %>